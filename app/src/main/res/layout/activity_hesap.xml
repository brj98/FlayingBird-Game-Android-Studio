<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hesap">

    <com.example.flappybird.GameView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:id="@+id/textViewas"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/laout"
        android:gravity="center"
        android:text="Hesap Bilgileri"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewas"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/dilo"
        android:text="Email:"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/txtkad4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewas"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:maxLength="20" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="122dp"
        android:layout_height="57dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/dilo"
        android:text="Kullanici Adi:"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/txtadsoyad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtkad4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:maxLength="20" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="260dp"
        android:layout_height="94dp"
        android:layout_below="@+id/txtadsoyad"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/cloud" />

    <TextView
        android:id="@+id/txtkaydet"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="64dp"
        android:fontFamily="@font/dilo"
        android:text="Kaydet"
        android:onClick="kaydetme"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="260dp"
        android:layout_height="94dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/cloud" />

    <TextView
        android:id="@+id/textViewsil"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="51dp"
        android:fontFamily="@font/dilo"
        android:text="Hesaptan Çıkış"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/menu"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_home_24"
        android:backgroundTint="#000000"
        android:onClick="anasayfa" />

</RelativeLayout>